SECURITY_JWT_EXPIRATION=86400000

# ----------------------------------------------------------------------------
# SUPER ADMIN LOGIN - SET YOUR ADMIN CREDENTIALS
# ----------------------------------------------------------------------------
SUPERADMIN_EMAIL=superadmin@hrms.com
SUPERADMIN_PASSWORD=admin123

# ----------------------------------------------------------------------------
# AZURE STORAGE - GET FROM AZURE PORTAL
# ----------------------------------------------------------------------------
STORAGE_AZURE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=YOUR_STORAGE_ACCOUNT;AccountKey=YOUR_STORAGE_KEY;EndpointSuffix=core.windows.net
STORAGE_AZURE_CONTAINER=hrms-documents
DOCUMENTS_STORAGE_BASE_PATH=documents

# ----------------------------------------------------------------------------
# CORS - REPLACE WITH YOUR VM IP
# ----------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://YOUR_VM_IP,http://localhost,http://localhost:3000

# ----------------------------------------------------------------------------
# EMAIL (OPTIONAL - Leave empty if not using)
