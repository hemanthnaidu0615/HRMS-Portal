# ============================================================================
# HRMS Portal - Environment Configuration
# ============================================================================
# Location: Place this at project root (/home/user/HRMS-Portal/.env)
# ============================================================================

# ----------------------------------------------------------------------------
# DATABASE - REPLACE WITH YOUR ACTUAL DATABASE DETAILS
# ----------------------------------------------------------------------------
      
# ----------------------------------------------------------------------------
# DATABASE CONNECTION POOL (use defaults)
# ----------------------------------------------------------------------------
HIKARI_MAX_POOL_SIZE=20
HIKARI_MIN_IDLE=5
HIKARI_CONNECTION_TIMEOUT=20000
HIKARI_MAX_LIFETIME=600000
HIKARI_LEAK_DETECTION_THRESHOLD=60000

# ----------------------------------------------------------------------------
# HIBERNATE (use defaults)
# ----------------------------------------------------------------------------
SPRING_JPA_HIBERNATE_DDL_AUTO=none
SPRING_JPA_SHOW_SQL=false
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.SQLServerDialect
HIBERNATE_FORMAT_SQL=true
HIBERNATE_BATCH_SIZE=20
HIBERNATE_QUERY_TIMEOUT=30000

# ----------------------------------------------------------------------------
# JWT SECURITY - GENERATE SECRET WITH: openssl rand -base64 32
# ----------------------------------------------------------------------------
